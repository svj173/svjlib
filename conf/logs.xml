<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="logDir" value="${env:MODULE_HOME}/log"/>
    <property name="maxFileSize" value="5MB"/>
    <property name="maxHistory" value="7"/>

    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logDir}/logs.txt</file>
        <append>true</append>

        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="org.eltex.iotcore.server.logs.LoggerLayout">
                <useColor>false</useColor>
            </layout>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${logDir}/logs-%d.%i.log</fileNamePattern>
            <maxHistory>${maxHistory}</maxHistory>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>${maxFileSize}</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>

    <root>
        <appender-ref ref="file"/>
    </root>

</configuration>
